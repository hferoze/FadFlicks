<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NormalTextStyle"
        parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textSize">14sp</item>
        <item name="android:shadowColor">@color/text_color_dark</item>
        <item name="android:shadowDx">@integer/text_shadow_dx</item>
        <item name="android:shadowDy">@integer/text_shadow_dy</item>
        <item name="android:shadowRadius">@integer/text_shadow_radius</item>
        <item name="android:textColor">@color/text_color_normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PortraitTitleTextStyle"
        parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:text">"@string/detail_title"</item>
        <item name="android:shadowColor">@color/text_color_dark</item>
        <item name="android:shadowDx">@integer/title_shadow_dx</item>
        <item name="android:shadowDy">@integer/title_shadow_dy</item>
        <item name="android:shadowRadius">@integer/title_shadow_radius</item>
        <item name="android:textColor">@color/text_color_normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LandscapeTitleTextStyle"
        parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:text">"@string/detail_title"</item>
        <item name="android:shadowColor">@color/text_color_dark</item>
        <item name="android:shadowDx">@integer/title_shadow_dx</item>
        <item name="android:shadowDy">@integer/title_shadow_dy</item>
        <item name="android:shadowRadius">@integer/title_shadow_radius</item>
        <item name="android:textColor">@color/text_color_normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>